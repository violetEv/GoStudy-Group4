<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoStudy"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.home.popularcourse.ViewMoreCourseActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.home.category.CategoryViewMoreActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.splashscreen.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.detail.DetailCourseActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.otp.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.forgotpassword.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.splashscreen.CustomAppIntroActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.payment.PaymentDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.payment.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.account.changepassword.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.account.history.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.account.myprofile.MyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>